# 見た目
window-theme = dark
theme = catppuccin-mocha
background-opacity = 0.85
font-family = Moralerspace Argon HWNF
font-size = 16

# MacのOptionをAltとして使う
macos-option-as-alt = true
# Macでタイトルバーを非表示
macos-titlebar-style = hidden

# クリップボードアクセスを許可
clipboard-read = allow
clipboard-write = allow
# マウスで選択したらクリップボードへコピー
copy-on-select = clipboard

# カーソル関連
cursor-click-to-move = false
cursor-opacity = 0.7
cursor-style = bar
# 入力時にマウスをすぐに非表示
mouse-hide-while-typing = true

# フォーカスしてない方を暗くする
unfocused-split-opacity = 0.5

# リガチャ無効化
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# クイックターミナル
quick-terminal-screen = main
quick-terminal-position = bottom
quick-terminal-animation-duration = 0

# keymaps
keybind = clear
# クイックターミナル
keybind = "global:alt+cmd+space=toggle_quick_terminal"
# タブ操作
keybind = super+t=new_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+tab=next_tab
# 選択範囲操作
keybind = shift+down=adjust_selection:down
keybind = shift+end=adjust_selection:end
keybind = shift+home=adjust_selection:home
keybind = shift+left=adjust_selection:left
keybind = shift+right=adjust_selection:right
keybind = shift+up=adjust_selection:up
keybind = super+a=select_all
# ウィンドウ分割
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
# 分割ウィンドウフォーカス操作
keybind = super+alt+down=goto_split:bottom
keybind = super+alt+left=goto_split:left
keybind = super+alt+right=goto_split:right
keybind = super+alt+up=goto_split:top
# インスペクタ
keybind = super+alt+i=inspector:toggle
# クリップボード
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
# 設定
keybind = super+comma=open_config
keybind = super+shift+comma=reload_config
# 新規ウィンドウ
keybind = super+n=new_window
# 終了
keybind = super+q=quit

